{
    "manifest_version": 3,
    "name": "Word Lookup Extension",
    "version": "1.0",
    "description": "Provides definitions for selected words.",
    "permissions": ["contextMenus", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  